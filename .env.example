# ICSHD GENIUSES Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DB_TYPE=mongodb
MONGODB_URI=mongodb://localhost:27017/icshd_geniuses
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=icshd_geniuses
MYSQL_USERNAME=root
MYSQL_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_EXPIRES_IN=86400000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@icshd-geniuses.com
FROM_NAME=ICSHD GENIUSES

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# WordPress Integration
WP_API_URL=http://localhost/wordpress/wp-json/wp/v2
WP_USERNAME=admin
WP_PASSWORD=admin

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Exercise Generation Settings
MAX_EXERCISES_PER_SESSION=50
DEFAULT_SESSION_TIME=600
MIN_SESSION_TIME=300
MAX_SESSION_TIME=1800

# Assessment Settings
AUTO_PROMOTION_ACCURACY=85
AUTO_PROMOTION_TIME_LIMIT=6
AUTO_PROMOTION_SESSIONS_REQUIRED=3

# Adaptive Learning Settings
ADAPTIVE_ENABLED=true
ADAPTIVE_DIFFICULTY_ADJUSTMENT=0.1
ADAPTIVE_PATTERN_MEMORY=10
