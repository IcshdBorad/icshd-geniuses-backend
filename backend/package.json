{
  "name": "icshd-geniuses-backend",
  "version": "1.0.0",
  "description": "Backend API for ICSHD GENIUSES Mental Math Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node run-tests.js all",
    "test:watch": "node run-tests.js all --watch",
    "test:coverage": "node run-tests.js all --coverage",
    "test:unit": "node run-tests.js unit",
    "test:integration": "node run-tests.js integration",
    "test:models": "node run-tests.js models",
    "test:services": "node run-tests.js services",
    "test:gamification": "node run-tests.js gamification",
    "test:ci": "node run-tests.js all --ci --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear": "jest --clearCache",
    "coverage:open": "start coverage/lcov-report/index.html",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080",
    "seed": "node database/seeders/index.js",
    "migrate": "node database/migrations/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.4",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.6.7",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^29.5.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.47.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.2",
    "jest-html-reporters": "^3.1.4",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "api",
    "mental-math",
    "education",
    "soroban",
    "vedic-math"
  ],
  "author": "ICSHD Team",
  "license": "MIT"
}
